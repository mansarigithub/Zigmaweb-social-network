@{
    Layout = "~/Views/Shared/_SignInLayout.cshtml";
}
<div class="portlet light ">
    <div class="portlet-title">
        <div class="caption font-green-haze">
            @*<i class="icon-flag font-green-haze"></i>*@
            <span class="caption-subject">حساب کاربریتان را فعال کنید</span>
        </div>
    </div>
    <div class="portlet-body">
        <div style="margin:0 10px">
            <div style="padding: 30px 0 80px 0; clear:both">
                <div style="float:right; margin-left:20px">
                    <i class="fa fa-flag font-blue-dark" style="font-size:50px"></i>
                </div>
                <div style="float:right;">
                    <span>حساب کاربری شما ایجاد شد!</span>
                </div>
            </div>
            <div class="note note-danger" style="line-height: 30px;">
                <p>
                    لینک فعال سازی به آدرس پست الکترونیک شما ارسال شده است.<br />
                    جهت فعال سازی حساب کاربریتان، به پست الکترونیک خود مراجعه کرده و روی لینک فعال سازی کلیک کنید.
                </p><br />
                @Html.Partial("_HowToCheckEmailGuide")
            </div>
            <div style="padding-top:20px">
                <a class="btn font-white bg-blue" href="@Url.Action("resendactivationcode")">ارسال مجدد لینک فعال سازی</a>
            </div>
        </div>
    </div>
</div>

