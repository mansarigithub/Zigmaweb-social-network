@model ZigmaWeb.UI.Areas.User.ViewModels.Profile.ProfileSettingsViewModel
@using ZigmaWeb.UI.Infrastructure.ExtensionMethod
@{
    Layout = "~/Areas/User/Views/Shared/_ProfilePartialLayout.cshtml";
    ViewBag.Title = "مدیریت حساب کاربری";
    ViewBag.ActiveNav = "ProfileSettings";
    ViewBag.ProfileStatisticsAndSocialLinks = Model.ProfileStatisticsAndSocialLinks;
}

<div class="portlet light">
    <div class="portlet-title tabbable-line">
        <div class="caption caption-md">
            <i class="icon-globe theme-font hide"></i>
            <span class="caption-subject font-blue-madison">مدیریت حساب کاربری</span>
        </div>
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1_1" data-toggle="tab" aria-expanded="true">عمومی</a>
            </li>
            <li class="">
                <a href="#tab_1_2" data-toggle="tab" aria-expanded="false">شبکه‌های اجتماعی</a>
            </li>
            <li class="">
                <a href="#tab_1_3" data-toggle="tab" aria-expanded="false">تصویر پروفایل</a>
            </li>
            <li>
                <a href="#tab_1_4" data-toggle="tab" aria-expanded="false">کلمه عبور</a>
            </li>
        </ul>
    </div>
    <div class="portlet-body form">
        <div class="tab-content">
            <div class="tab-pane active" id="tab_1_1">
                @Html.Partial("_GeneralSettings", Model)
            </div>
            <div class="tab-pane" id="tab_1_2">
                @Html.Partial("_SocialNetworks", Model)
            </div>
            <div class="tab-pane" id="tab_1_3">
                @Html.Partial("_ProfileImage", Model)
            </div>
            <div class="tab-pane" id="tab_1_4">
                @Html.Partial("_ChangePassword", Model)
            </div>
        </div>
    </div>
</div>

@section ComponentScripts{
    <script src="~/content/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-toastr/toastr.min.js"></script>
    <script src="~/Content/assets/global/plugins/croppic/croppic.min.js"></script>

}

@section PageScripts{
    <script src="~/Content/assets/pages/scripts/user_profilesettings_index.js"></script>
}

@section PageBreadcrumb{
    <li>
        <span>حساب کاربری</span>
        <i class="fa fa-angle-left"></i>
    </li>
    <li>
        <span>مدیریت حساب کاربری</span>
    </li>
}

@section PageActionsMenu{

}

@section Head {
    <link href="~/content/assets/global/plugins/bootstrap-toastr/toastr-rtl.min.css" rel="stylesheet" />
    <link href="~/Content/assets/pages/css/user_profilesettings.css" rel="stylesheet" />
    <link href="~/Content/assets/global/plugins/croppic/croppic.css" rel="stylesheet" />

    <style>
        .form-group.form-md-line-input .form-control.edited:not([readonly]) ~ .help-block-error {
            opacity: 1 !important;
        }
    </style>
}
