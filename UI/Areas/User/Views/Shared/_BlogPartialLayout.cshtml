@using ZigmaWeb.PresentationModel.Model;
@using ZigmaWeb.Localization.ExtensionMethod;
@{
    Layout = "~/Areas/User/Views/Shared/_UserAreaLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="profile-sidebar">
            <div class="portlet light profile-sidebar-portlet ">
                <div class="profile-userpic">
                    <img src="@Url.RouteUrl("getprofileimage",new {imageSize = "large" })" class="img-responsive" alt="">
                </div>
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">@User.FullName</div>
                    <div class="profile-usertitle-job">@User.Email</div>
                </div>
                <div class="profile-userbuttons">
                    <button type="button" class="btn btn-circle green btn-sm">Follow</button>
                    <button type="button" class="btn btn-circle red btn-sm">Message</button>
                </div>
                <div class="profile-usermenu">
                    <ul class="nav">
                        @*<li @(activeNav == "ProfileOverview" ? "class=active" : "")>
                            <a href="@Url.Action("index", "profileoverview")">
                                <i class="icon-home"></i> حساب کاربری
                            </a>
                        </li>*@
                        <li class="active")>
                            <a href="@Url.Action("index", "profilesettings")">
                                <i class="icon-settings"></i> تنظیمات
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="profile-content">
            @RenderBody()
        </div>
    </div>
</div>


@section ComponentScripts{
    @RenderSection("ComponentScripts")
}

@section PageScripts{
    @RenderSection("PageScripts")
}

@section PageBreadcrumb{
    @RenderSection("PageBreadcrumb")
}

@section PageActionsMenu{
    @RenderSection("PageActionsMenu")
}

@section Head{
    <link href="~/content/assets/pages/css/user_blog_partial_layout.css" rel="stylesheet" />
    @RenderSection("Head")
}
